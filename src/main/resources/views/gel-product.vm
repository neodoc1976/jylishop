#include("views/header.vm")
<style>
    center {
        margin: auto;
    }

    .type {
        font-family: "Agency FB", sans-serif;
        font-size: 170%;
        margin-left: 75px;
    }
</style>
<br/>
<br/>
<br/>
<div class="type">
    <b>Product: </b> $opalescenseInfo.title<br/>
    <b>Description: </b>$opalescenseInfo.description<br/>
    <b>Volume of reagent: </b> $opalescenseInfo.reactantPercent %<br/>
    <b>Syringe volume: </b>$opalescenseInfo.volume ml<br/>
    <b>Price per one: </b>$opalescenseInfo.price $<br/>
</div>
<br/>
<br/>
<br/>
<center>
    <img src="/resources/pictures/$opalescenseInfo.picture" alt="File not found">

</center>
<br/>
<br/>
<div class="decoration">
    #if ($comments.size()>0)
        Comments:
        <br/>
    #else No comments for this product.Be to first to add.
    #end
    <br/>
    #foreach ($c in $comments )
        <span style="color:#0101DF"> <i class="fa fa-user" aria-hidden="true"></i>$c.userName</span>
        said at $c.date <span style='padding-left:125px;'>
        <br/>
        $c.message
        <br/>
        #if ($user_name)
            #set($a = false)
            #foreach ($vote in $c.commentVote)
                #if ($vote.user.username == $user_name)
                    #set($a = true)
                #end
            #end

            #if($a == false)
                <a href="/product/comment/$c.id/positive"> <i class="fa fa-thumbs-up" aria-hidden="true"></i> </a>
                <a href="/product/comment/$c.id/negative">  <i class="fa fa-thumbs-down"
                                                               aria-hidden="true"></i> </a>
            #end

        #end
        #if ($rating.get($c)<=0)
            rating: <span style="color:blueviolet">  $rating.get($c)</span>
        #else
            rating:<span style="color:red">  $rating.get($c)</span>
        #end
        <br/>
        <br/>
    #end
    #if ($user_name)
    <form action="/product/$opalescenseInfo.id/comment" method="post">
        <p>
            <b>Your comment:</b><br/>
            <textarea name="message" cols="50" rows="5"></textarea>
        </p>
        <p>
            <input type="submit" value="submit">
        </p>
    #else
    #end

</div>

#include("views/footer.vm")